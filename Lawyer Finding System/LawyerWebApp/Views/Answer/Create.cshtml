                    @Html.EditorFor(model => model.Answer1, new { htmlAttributes = new { @class = "form-controlform-control border_Radius2", type = "text" } })
                    @Html.ValidationMessageFor(model => model.Answer1, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">

                </div>
                <div class="col-md-8">
                    @Html.TextBoxFor(model => model.QuestionID, new { @Value = @data, type = "hidden" }) 
                    @Html.ValidationMessageFor(model => model.QuestionID, "", new { @class = "text-danger" })
                </div>
            </div>
