                </div>
                <div class="col-md-4">
                    <button class="btn btn-lg btn-primary btn-block btn-signin" type="submit">Create Answer</button>
                </div>
                <div class="col-md-4">
                </div>
            </div>

            <div class="row">
                @Html.RouteLink("Back", new { action = "QuestionList", controller = "Home",id = @data2})
            </div>
        </div>
    </div>
